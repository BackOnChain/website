---
import BaseLayout from '../layouts/BaseLayout.astro';
import Profile from '@components/Profile.astro';

import manu from '@src/static/manu.jpg';
import corentin from '@src/static/corentin.jpg';
import tom from '@src/static/tom.jpg';
import julien from '@src/static/julien.jpg';
import jb from '@src/static/jb.jpg';

---

<BaseLayout betweenMainAndFooterClass="grow" mainClass="w-[95%] 3xl:w-1/2 place-content-center text-center items-center self-center mt-4 flex flex-col">

    <div class="w-full flex flex-col gap-10 text-center place-content-center">
        <h1 class="text-white font-bold text-7xl leading-0 m-0 p-12">Meet the <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#5702F8] to-[#F044F5]">BackOnChain team</span></h1>

        <div class="flex flex-col justify-around place-content-center">
            <div class="flex md:flex-row flex-col self-center">
                <Profile prenom="Corentin" nom="Oudjani" poste="CEO" srcImage={corentin} linkedin="https://www.linkedin.com/in/corentin-oudjani-1b1b3b1b2/"/>
                <Profile prenom="Emmanuel" nom="Couka" poste="CMO" srcImage={manu} linkedin="https://www.linkedin.com/in/jbcol/"/>
                <Profile prenom="Tom" nom="Dupont" poste="SC Developer" srcImage={tom} linkedin="https://www.linkedin.com/in/tom-bouvier-1b1b3b1b2/"/>
                <img src={julien} class="w-0 h-0"/>
            </div>
            <div class="flex md:flex-row flex-col self-center">
                <Profile prenom="Julien" nom="Sola" poste="Stagiaire" srcImage={julien} linkedin="https://www.linkedin.com/in/jbcol/"/>
                <Profile prenom="Jean-Baptiste" nom="Col" poste="CTO" srcImage={jb} linkedin="https://www.linkedin.com/in/jbcol/"/>
            </div>
        </div>
    </div>

</BaseLayout>