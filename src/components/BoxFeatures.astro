---
const  { title, text }  = Astro.props;
---

<div class="flex basis-1/3 bg-gradient-to-tl from-[#5702F8] to-[#F044F5] rounded-lg">
    <div class="flex flex-col grow m-0.5 p-4 bg-[#C4A6CB] rounded-lg">
        <slot/>
        <p class="text-xl font-bold text-center text-black mb-0">{title}</p>
        <p class="text-center font-bold text-sm m-2">{text}</p>
    </div>
</div>